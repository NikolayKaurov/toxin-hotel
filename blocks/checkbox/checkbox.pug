mixin checkbox(options={})
  -
    const {
      id = 'unique-id', //- требуется ТОЛЬКО для раскрываемого списка чекбоксов
      expand = '', //- заголовок раскрываемого списка чекбоксов
      open = false,
      items = [],
    } = options;

  .checkbox
    if (expand)
      input.checkbox__input(
        type="checkbox"
        id= id
        checked= !open
      )
      label.checkbox__expand-label(for= id)= expand
    each item in items
      -
        const {
          name = 'undefined-name',
          value = 'on',
          checked = false,
          text = '',
          explanation = '',
        } = item;
      label.checkbox__label
        input.checkbox__input(
          type="checkbox"
          name= name
          value= value
          checked= checked
        )
        if (explanation)
          span.checkbox__text.checkbox__text_bold= text
          span.checkbox__explanation= explanation
        else
          span.checkbox__text= text
