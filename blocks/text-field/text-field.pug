mixin text-field(options={})
  -
    const {
      name = 'undefined-name',
      placeholder = 'text',
      label = '',
      description = '',
      type = '',
    } = options;
    let classString = '';
    let typeString = 'text';
    if (type === 'date') {
      classString = 'text-field_type_date js-text-field_type_date';
    } else if (type === 'password') {
      typeString = 'password';
    } else if (type === 'email') {
      typeString = 'email';
    }

  .text-field.js-text-field(class= classString data-name= name)
    .text-field__header
      if (label)
        p.text-field__label= label
      if (description)
        p.text-field__label= description
    .text-field__wrapper.js-text-field__wrapper
      input.text-field__input.js-text-field__input(
        name= name
        placeholder= placeholder
        type= typeString
      )
